<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bk"
    tools:context=".Login">

    <ImageView
        android:id="@+id/gambar"
        android:layout_width="174dp"
        android:layout_height="145dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="137dp"
        app:srcCompat="@drawable/buku" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login Kuy"
        android:textSize="25dp"
        android:fontFamily="@font/fredoka_one"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#FF8C00"
        android:id="@+id/textView4"
        android:layout_below="@+id/gambar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:hint="Username"
        android:textSize="15dp"
        android:textColor="#000080"
        android:textColorHint="#000080"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:id="@+id/login_email"/>

    <EditText
        android:id="@+id/login_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#000080"
        android:textColorHint="#000080"
        android:textSize="15dp" />


    <Button
        android:id="@+id/login_save"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#FF8C00"
        android:onClick="login"
        android:text="Login Sekarang"
        android:textColor="#ffffff"
        android:textColorHint="#fff"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="62dp"
        android:text="Belum memiliki akun? "
        android:textColor="#000080"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/keRegistrasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="231dp"
        android:layout_marginBottom="62dp"
        android:text="Buat disini!"
        android:textColor="#FF8C00"
        android:textSize="18sp" />

</RelativeLayout>

